<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="application" class="ru.sbt.mipt.oop.Application">
        <constructor-arg ref="smartHomeLoader"/>
        <constructor-arg ref="sensorEventsManager"/>
    </bean>

    <bean name="smartHomeLoader" class="ru.sbt.mipt.oop.home_utilities.FileSmartHomeLoader"/>

    <bean name="sensorEventsManager" class="com.coolcompany.smarthome.events.SensorEventsManager"/>

</beans>